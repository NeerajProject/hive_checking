<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="event_qrcode_template">
        <t t-jquery=".o_event_barcode_image" t-operation="replace">
            <div class="o_barcode_mobile_container">
                <a role="button" class="btn btn-primary o_mobile_barcode">
                    <i class="fa fa-camera fa-2x o_barcode_mobile_camera"/>
                    Tap to scan
                </a>
                <img src="/techfuge_event_qrcode_scanner/static/img/qr-code.png" alt="QR Code"/>
                <span class="o_barcode_laser"/>
            </div>
         </t>
    </t>

</templates>
