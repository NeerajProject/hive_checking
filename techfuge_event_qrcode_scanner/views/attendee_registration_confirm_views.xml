<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_attendee_registration_confirm_form" model="ir.ui.view">
            <field name="name">attendee.registration.confirm.form</field>
            <field name="model">attendee.registration.confirm</field>
            <field name="arch" type="xml">
                <form create="false" js_class="qr_scanning_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="oe_inline" readonly="1" force_save="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="attendee_id" invisible="1" force_save="True"/>
                                <field name="designation" readonly="1" force_save="True"/>
                                <field name="event_id" readonly="1" options="{'no_open': True}" force_save="True"/>
                                <field name="exhibitor_name" readonly="1" force_save="True"/>
                            </group>
                            <group>
                                <field name="company_name" readonly="1" force_save="True"/>
                                <field name="hall_id" invisible="1" force_save="True"/>
                                <field name="location_name" readonly="1" force_save="True"/>
                                <field name="stand_number" readonly="1" force_save="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_attendee_registration_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Registration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attendee.registration.confirm</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_attendee_registration_confirm_form"/>
        </record>

    </data>
</odoo>
