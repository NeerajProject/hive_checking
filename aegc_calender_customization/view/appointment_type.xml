<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_calendar_event_form_inherited" model="ir.ui.view">
            <field name="name">calendar.event.form.calendar_sms</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>

                        <button name="action_create_invoice" type="object" string="Create Invoice"
                                attrs="{'invisible': [('state', '=', 'invoice')]}"/>
                        <button name="action_view_invoice" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('state', '=', 'draft')]}"
                                string="Show Invoice"/>
                        <button name="action_view_18_points" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('eighteen_points', '=', False)]}"
                                string="Show Related Appointment"/>
                        <field name="state" widget="statusbar"/>

                    </header>


                </xpath>

                <xpath expr="//page[@name='page_details']/group/group/field[@name='alarm_ids']" position="after">

                    <field name="product_ids" widget="many2many_tags"></field>
                    <field name="is_single_invoice"></field>
                    <field name="eighteen_points"></field>

                </xpath>
            </field>
        </record>


        <!-- Menus -->


        <record id="appointment_type_view_form" model="ir.ui.view">
            <field name="name">appointment.type.view.form.inherit.crm</field>
            <field name="model">appointment.type</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="appointment.appointment_type_view_form"/>
            <field name="arch" type="xml">


                <xpath expr="//page[@name='options']/group/group[@name='options_left_details']/field[@name='location_id']"
                       position="after">
                    <field name="gap_between_slots"></field>
                    <field name="is_eighteen_points"></field>
                    <field name="eighteen_point_appointment_type"
                           attrs="{'invisible': [('is_eighteen_points','not in',[True])],'required':[('is_eighteen_points','=',True)]}"></field>
                    <field name="span_of_eighteen_points"
                           attrs="{'invisible': [('is_eighteen_points','not in',[True])],'required':[('is_eighteen_points','=',True)]}"></field>

                </xpath>
            </field>
        </record>

    </data>
</odoo>