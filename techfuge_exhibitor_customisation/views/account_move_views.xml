<?xml version="1.0" encoding="utf-8"?>
<odoo>


     <record id="view_account_position_form" model="ir.ui.view">
        <field name="name">account.fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
            <field name="auto_apply" position="after">
                <field name="is_place_order"/>
            </field>
        </field>
    </record>







    <record id="view_move_form_inherit_exhibitor" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='source_id']" position="after">
                <field name="narration_text" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='narration']" position="after">
                <field name="invoice_payment_terms" placeholder="Terms..." colspan="2" nolabel="1"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="brand_id"/>
                <field name="reference_id" string="Reference"/>
            </xpath>
        </field>
    </record>

    <record id="view_out_invoice_tree_inherit_exhibitor" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="brand_id"/>
                <field name="reference_id" string="Reference"/>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_action_account_report_partner_ledger_in_transaction_currency"
              name="Partner Ledger in Transaction Currency"
              action="techfuge_exhibitor_customisation.action_account_report_partner_ledger_in_transaction_currency"
              parent="account_reports.account_reports_partners_reports_menu"
              groups="account.group_account_readonly"/>

</odoo>
