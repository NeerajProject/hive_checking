<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="event_activity_location_form_view" model="ir.ui.view">
            <field name="name">techfuge_exhibitor_customisation.event_activity_location.form</field>
            <field name="model">event.activity.location</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                                    <field name="name"></field>
                        <field name="activity_location_type_id"></field>
                            </group>
                            <group>

                                    <field name="event_id"></field>
                        <field name="activity_location_group"></field>
                            </group>
                        </group>


                    </sheet>
                </form>
            </field>
        </record>

        <record id="event_activity_location_tree_view" model="ir.ui.view">
            <field name="name">techfuge_exhibitor_customisation.event_activity_location.tree</field>
            <field name="model">event.activity.location</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">

                                                    <field name="name"></field>
                        <field name="activity_location_type_id"></field>

                                    <field name="event_id"></field>
                        <field name="activity_location_group"></field>
                </tree>
            </field>
        </record>


        <record id="event_activity_location_act_window" model="ir.actions.act_window">
            <field name="name">Activity Locations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">event.activity.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Event Location" id="event_activity_location_menu" parent="event.menu_event_configuration" action="event_activity_location_act_window"/>

    </data>
</odoo>