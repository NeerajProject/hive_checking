<div class="container">
    <div style="      display: flex;
      justify-content: center;
">
         <img src="/techfuge_exhibitor_customisation/static/src/img/icons/HFS2024.svg" style="width:30%"></img>

    </div>
    <h2><t t-esc="event_id.name"/> Visitors  Registration</h2>
    <form action="/submit/visitors/badge" method="post">
        <input name="event_id" t-att-value="event_id.id" style="display:None"></input>


        <div class="form-group">
            <label for="title" style="font-size:1.5em">Title:</label>
            <select id="title" style="font-size:1.5em" name="title">
                <option value="Mr.">Mr.</option>
                <option value="Ms.">Ms.</option>
                <option value="Mrs.">Mrs.</option>

            </select>
        </div>

        <div class="row-new">
            <div class="col-new-6">
                       <label for="firstname" style="font-size:1.5em">First Name:</label>
            <input type="text" id="firstname"  style="font-size:1.5em" name="name" required="True"/>
            </div>
            <div class="col-new-6">
                 <label for="lastname" style="font-size:1.5em">Last Name:</label>
            <input type="text" id="last_name" style="font-size:1.5em" name="lastname" required="True"/>
            </div>

        </div>




        <div class="row-new">
            <div class="col-new-6">
                            <label for="designation" style="font-size:1.5em">Designation:</label>
            <input type="text" id="designation" style="font-size:1.5em" name="designation" required="True"/>
            </div>
            <div class="col-new-6">
                    <label for="email" style="font-size:1.5em">Business Email:</label>
            <input type="email" id="email" name="email"  style="font-size:1.5em" required="True"/>
            </div>
        </div>


        <div class="row-new">
            <div class="col-new-6">
                      <label for="mobile" style="font-size:1.5em">Mobile:</label>
            <input type="tel" id="mobile" name="mobile"  style="font-size:1.5em" required="True"/>
            </div>
            <div class="col-new-6">
                   <label for="company" style="font-size:1.5em">Company Name:</label>
            <input type="text" id="company" style="font-size:1.5em" name="company_name" required="True"/>
            </div>
        </div>
        <div class="row-new">
                    <div class="col-new-6">
             <label for="website" style="font-size:1.5em">Company Website:</label>
            <input type="text" id="website" style="font-size:1.5em" name="company_website" />
        </div>

            <div class="col-new-6">
                  <label for="city" style="font-size:1.5em">City:</label>
            <input type="text" id="city" name="city_or_town" style="font-size:1.5em" required="True"/>
            </div>
        </div>

<div class="row-new">
    <div class="col-new-6">
                    <label for="state" style="font-size:1.5em">State:</label>
            <input type="text" id="state" style="font-size:1.5em" name="state_or_province" required="True"/>
    </div>
    <div class="col-new-6">
        <label for="country" style="font-size:1.5em">Country:</label>

             <select id="title"  style="font-size:1.5em" class="advanced-select"   name="country">

                  <t t-foreach="country_ids" t-as="country">
                <option t-att-value="country.id"><t t-esc="country.name"></t> </option>
            </t>

            </select>

    </div>
</div>

<br></br>

        <input type="submit" style="font-size:1.5em" value="Register"/>

            <t t-if="successful">

               <div id="submission_success_msg"  style="font-size:1.5em" class="alert alert-info mb-4" role="status">
                   <strong> Successfully registered! </strong>
 Please Check Your Email                                    </div>

        </t>
    </form>
</div>
