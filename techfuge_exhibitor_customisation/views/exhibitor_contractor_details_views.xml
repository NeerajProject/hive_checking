<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_exhibitor_contractor_details_form" model="ir.ui.view">
            <field name="name">exhibitor.contractor.details.form</field>
            <field name="model">exhibitor.contractor.details</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="approve_contractor" string="Approve" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': [('status', 'in', ('approved', 'access_granted'))]}"/>
                        <button name="grant_portal_access_for_contractor" string="Grant Portal Access"
                                class="oe_highlight" type="object"
                                attrs="{'invisible': [('status', 'in', ('pending', 'access_granted'))]}"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_contractor_other_requests" icon="fa-send"
                                    type="object" attrs="{'invisible': [('contractor_other_request_count', '=', 0)]}">
                                <field name="contractor_other_request_count" string="Other Requests" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_contractor_invoices"
                                    icon="fa-pencil-square-o" type="object"
                                    attrs="{'invisible': [('contractor_invoice_count', '=', 0)]}">
                                <field name="contractor_invoice_count" string="Invoices" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_contractor_payments" icon="fa-money"
                                    type="object" attrs="{'invisible': [('contractor_payments_count', '=', 0)]}">
                                <field name="contractor_payments_count" string="Payments" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group col="3" class="mb16">
                            <group>
                                <field name="contractor_full_name" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="company_address" readonly="1"/>
                                <field name="country_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="brand_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="company_name" readonly="1"/>
                                <field name="landline" readonly="1"/>
                                <field name="city_or_town" readonly="1"/>
                                <field name="event_id" readonly="1"/>
                                <field name="upload_permit"/>
                                <field name="enable_finance_section"/>
                            </group>
                            <group>
                                <field name="mobile" readonly="1"/>
                                <field name="designation" readonly="1"/>
                                <field name="state_or_province" readonly="1"/>
                                <field name="exhibitor_name" readonly="1"/>
                                <field name="no_of_badges"/>
                                <field name="contract_purpose_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="badge_details" string="Badge Details">
                                <field name="badge_ids">
                                    <tree create="false" editable="bottom" delete="false">
                                        <field name="attendee_full_name" string="Name" readonly="1"/>
                                        <field name="designation" readonly="1"/>
                                        <field name="email" readonly="1"/>
                                        <field name="mobile" readonly="1"/>
                                        <field name="phone" string="Landline" readonly="1"/>
                                        <button name="download_exhibitor_attendee_attachments" string="Passport"
                                                class="oe_highlight" type="object" icon="fa-download"
                                                context="{'passport_copy': True}"/>
                                        <field name="visa_attachment_id" invisible="1"/>
                                        <button name="download_exhibitor_attendee_attachments" string="Visa"
                                                class="oe_highlight" type="object" icon="fa-download"
                                                context="{'visa_copy': True}"
                                                attrs="{'invisible': [('visa_attachment_id', '=', False)]}"/>
                                        <field name="air_ticket_attachment_id" invisible="1"/>
                                        <button name="download_exhibitor_attendee_attachments" string="Air Ticket"
                                                class="oe_highlight" type="object" icon="fa-download"
                                                context="{'air_ticket': True}"
                                                attrs="{'invisible': [('air_ticket_attachment_id', '=', False)]}"/>
                                        <button name="download_exhibitor_attendee_attachments" string="Badge"
                                                class="oe_highlight" type="object" icon="fa-download"
                                                context="{'badge_attachment': True}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="uploaded_documents" string="Uploaded Documents">
                                <field name="uploaded_document_ids">
                                    <tree create="false" no_open="1" editable="bottom" delete="false">
                                        <field name="document_type_id" readonly="1"/>
                                        <field name="document_note" readonly="1"/>
                                        <field name="document_attachment_id" invisible="1"/>
                                        <button name="download_other_uploaded_document" string="Document"
                                                class="oe_highlight" type="object" icon="fa-download"
                                                attrs="{'invisible': [('document_attachment_id', '=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_exhibitor_contractor_details_tree" model="ir.ui.view">
            <field name="name">exhibitor.contractor.details.tree</field>
            <field name="model">exhibitor.contractor.details</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="contractor_full_name"/>
                    <field name="company_name"/>
                    <field name="brand_id"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="contract_purpose_id"/>
                    <field name="no_of_badges"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_exhibitor_contractor_details_search" model="ir.ui.view">
            <field name="name">exhibitor.contractor.details.search</field>
            <field name="model">exhibitor.contractor.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="contractor_full_name"/>
                    <field name="event_id"/>
                    <field name="company_name"/>
                    <field name="brand_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Event" name="group_by_event_id" domain="[]" context="{'group_by':'event_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_view_exhibitor_contractor_details" model="ir.actions.act_window">
            <field name="name">Contractor Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exhibitor.contractor.details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_exhibitor_contractor_details_tree"/>
            <field name="search_view_id" ref="view_exhibitor_contractor_details_search"/>
        </record>

        <menuitem name="Contractor Details"
                  id="menu_event_exhibitor_contractor_details"
                  action="action_view_exhibitor_contractor_details"
                  sequence="120"
                  parent="event.menu_reporting_events"
                  groups="event.group_event_user"/>

    </data>
</odoo>
