<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_event_registration_form_inherit_exhibitor" model="ir.ui.view">
        <field name="name">event.registration.form.inherit</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">



            <xpath expr="//page[@name='exhibitor_details']/group[1]" position="inside">
                <group>
                    <field name="exhibitor_full_name" readonly="1"/>
                </group>
            </xpath>
                        <xpath expr="//field[@name='last_name']" position="after">

      <field name="country_code" string="Country Code"/>







<!--                            <div class="col">                <field name="country_code" />-->
<!--</div>-->
<!--                            <div class="col">                 <field name="mobile" />-->
<!-- </div>-->

                        </xpath>
            <xpath expr="//field[@name='exhibitor_company_name']" position="before">
                <field name="exhibitor_contract_id" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='contractor_company_website']" position="before">
                <field name="contractor_name" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='exhibitor_name']" position="after">
                <field name="contractor_details_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_event_registration_tree_inherit_exhibitor" model="ir.ui.view">
        <field name="name">event.registration.form.inherit</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='event_id']" position="after">
                <field name="attendee_type_id"/>
            </xpath>
        </field>
    </record>

    <record id="techfuge_customisation.menu_event_visitor_list" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('event.group_event_user'))]"/>
    </record>

    <record id="techfuge_customisation.menu_event_attendee_activities" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('event.group_event_user'))]"/>
    </record>

</odoo>
