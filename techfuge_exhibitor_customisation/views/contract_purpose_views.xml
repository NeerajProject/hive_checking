<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_contract_purpose_form" model="ir.ui.view">
            <field name="name">contract.purpose.form</field>
            <field name="model">contract.purpose</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_contract_purpose_tree" model="ir.ui.view">
            <field name="name">contract.purpose.tree</field>
            <field name="model">contract.purpose</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_view_contract_purpose" model="ir.actions.act_window">
            <field name="name">Contract Purpose</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract.purpose</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_contract_purpose_tree"/>
        </record>

        <menuitem name="Contract Purpose"
                  id="menu_contract_purpose"
                  action="action_view_contract_purpose"
                  sequence="111"
                  parent="event.menu_event_configuration"
                  groups="techfuge_customisation.group_event_create_or_edit_access"/>

    </data>
</odoo>
