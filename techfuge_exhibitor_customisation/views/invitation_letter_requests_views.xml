<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_exhibitor_invitation_letter_request_search" model="ir.ui.view">
        <field name="name">exhibitor.invitation.letter.request.search</field>
        <field name="model">exhibitor.invitation.letter.request</field>
        <field name="arch" type="xml">
            <search>
                                <field name="reference_no" string="Reference"/>

                <field name="event_id" string="Event"/>
                <field name="exhibitor_name"/>
                <field name="exhibitor_contract_id"/>
                <field name="name"/>
                <field name="passport_number"/>
                <field name="country_id"/>
                <group expand="0" string="Group By">
                    <filter string="Event" name="event" domain="[]" context="{'group_by':'event_id'}"/>
                    <filter string="Exhibitor Contract" name="exhibitor_contract" domain="[]"
                            context="{'group_by':'exhibitor_contract_id'}"/>
                    <filter string="Nationality" name="nationality" domain="[]" context="{'group_by':'country_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_exhibitor_invitation_letter_request_tree" model="ir.ui.view">
        <field name="name">exhibitor.invitation.letter.request.tree</field>
        <field name="model">exhibitor.invitation.letter.request</field>
        <field name="arch" type="xml">
            <tree create="false" >
                <field name="reference_no"></field>
                <field name="event_id" string="Event"/>
                <field name="exhibitor_name"/>
                <field name="exhibitor_contract_id"/>
                <field name="create_date" string="Request Submission Date"/>
                <field name="name"/>
                <field name="passport_number"/>
                <field name="date_of_issue"/>
                <field name="date_of_expiry"/>
                <field name="country_id"/>
                <field name="from_date"/>
                <field name="till_date"/>
                <field name="no_of_days"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="action_exhibitor_invitation_letter_requests" model="ir.actions.act_window">
        <field name="name">Invitation Letter Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">exhibitor.invitation.letter.request</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_exhibitor_invitation_letter_request_tree"/>
    </record>

    <menuitem name="Invitation Letter Requests"
              id="menu_event_exhibitor_invitation_letter_requests"
              action="action_exhibitor_invitation_letter_requests"
              sequence="121"
              parent="event.menu_reporting_events"
              groups="event.group_event_user,techfuge_exhibitor_customisation.group_show_event_exhibitor_contract_report"/>


</odoo>
