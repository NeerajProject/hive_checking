<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_exhibitor_hotel_request_form" model="ir.ui.view">
            <field name="name">exhibitor.hotel.request.form</field>
            <field name="model">exhibitor.hotel.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="approve_hotel_request" string="Approve"
                                class="oe_highlight" type="object"
                                attrs="{'invisible': [('booking_status', '=', 'completed')]}"/>
                        <button name="reset_to_pending" string="Reset to Pending"
                                class="oe_highlight" type="object"
                                attrs="{'invisible': [('booking_status', '=', 'pending')]}"/>
                        <field name="booking_status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="sale_order_id" invisible="1"/>
                            <button class="oe_stat_button" name="action_view_hotel_booking_sale_orders" icon="fa-dollar"
                                    type="object" string="Sale Order"
                                    attrs="{'invisible': [('sale_order_id', '=', False)]}"/>
                        </div>
                        <div class="oe_title">
                            <label for="attendee_full_name" string="Name"/>
                            <h1>
                                <field name="attendee_full_name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="hotel_name" attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>
                                                                                            <field name="hotel_address"></field>

                                <field name="checkin_date"
                                       attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>



                                                          <field name="date_of_arrival_time"></field>
                    <field name="payment_status"></field>

                                <field name="no_of_nights" readonly="1"/>
                                <field name="additional_no_of_nights" readonly="1"/>
                                <field name="event_id" readonly="1" options="{'no_open': True}"/>
                                <field name="hotel_attachment_id" invisible="1"/>
                                <button name="download_hotel_uploaded_document" string="Document"
                                        class="oe_highlight" type="object" icon="fa-download"
                                        attrs="{'invisible': [('hotel_attachment_id', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="no_of_rooms" attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>
                                <field name="checkout_date"
                                       attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>
                                <field name="allowed_no_of_nights" readonly="1"/>
                                <field name="additional_paid_amount"
                                       attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>


                                <field name="payment_by_omg"></field>
                                <field name="payment_by_exhibitor"></field>

                                <field name="hotel_booking_ref"
                                       attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>
                                <field name="exhibitor_contract_id" string="Exhibitor" readonly="1"/>
                                                                        <field name="file_name" invisible="1"/>

                                <field name="upload_voucher"  widget="binary" filename="file_name"
                                       attrs="{'readonly': [('booking_status', '=', 'completed')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_exhibitor_hotel_request_tree" model="ir.ui.view">
            <field name="name">exhibitor.hotel.request.tree</field>
            <field name="model">exhibitor.hotel.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="attendee_full_name" string="Name"/>
                    <field name="event_id"/>
                    <field name="exhibitor_contract_id"/>
                    <field name="company_name"/>
                    <field name="brand_id"/>
                    <field name="reference_id"/>
                    <field name="room_per_person_details"></field>

                    <field name="hotel_name"/>
                    <field name="hotel_address"></field>
                    <field name="no_of_rooms"/>
                    <field name="checkin_date"/>
                    <field name="checkout_date"/>
                    <field name="no_of_nights"/>
                    <field name="allowed_no_of_nights"/>
                    <field name="additional_no_of_nights"/>
                    <field name="additional_paid_amount"/>
                    <field name="booking_status"/>
                    <field name="date_of_arrival_time"></field>
                    <field name="payment_status"></field>
                    <button name="approve_hotel_request" string="Approve" type="object"></button>
                </tree>
            </field>
        </record>

        <record id="view_exhibitor_hotel_request_search" model="ir.ui.view">
            <field name="name">exhibitor.hotel.request.search</field>
            <field name="model">exhibitor.hotel.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="event_id"/>
                    <field name="attendee_id"/>
                    <field name="exhibitor_contract_id"/>
                    <field name="company_name"/>
                    <field name="brand_id"/>
                    <field name="reference_id"/>
                    <field name="hotel_name"/>
<!--                    <field name="status"></field>-->
                    <group expand="0" string="Group By">
                        <filter string="Event" name="group_by_event_id" domain="[]" context="{'group_by':'event_id'}"/>
                        <filter string="Attendee" name="group_by_attendee_id" domain="[]"
                                context="{'group_by':'attendee_id'}"/>
                        <filter string="Exhibitor" name="group_by_exhibitor_contract_id" domain="[]"
                                context="{'group_by':'exhibitor_contract_id'}"/>
                        <filter string="Hotel Name" name="group_by_hotel_name" domain="[]"
                                context="{'group_by':'hotel_name'}"/>
                        <filter string="Booking Status" name="group_by_booking_status" domain="[]"
                                context="{'group_by':'booking_status'}"/>
                        <filter string="Check In Date" name="group_by_checkin_date"
                                context="{'group_by':'checkin_date:day'}"/>
                        <filter string="Check Out Date" name="group_by_checkout_date"
                                context="{'group_by':'checkout_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_view_exhibitor_hotel_request" model="ir.actions.act_window">
            <field name="name">Hotel Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exhibitor.hotel.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_status': 'submit'}</field>
            <field name="view_id" ref="view_exhibitor_hotel_request_tree"/>
            <field name="search_view_id" ref="view_exhibitor_hotel_request_search"/>
        </record>

        <menuitem name="Hotel Requests"
                  id="menu_exhibitor_hotel_request"
                  action="action_view_exhibitor_hotel_request"
                  sequence="103"
                  parent="event.menu_reporting_events"
                  groups="event.group_event_user"/>

    </data>
</odoo>
