<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_payment_receipt_exhibitor" model="report.paperformat">
        <field name="name">Exhibitor Payment Receipt Paper Format</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">7</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="dpi">96</field>
    </record>


    <template id="report_payment_receipt_document_inherit_exhibitor"
              inherit_id="account.report_payment_receipt_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.internal_layout">
                <div class="page" style="font-size: 14px;">
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-4 text-center">
                            <div style="vertical-align: middle;">
                                <img t-att-src="image_data_uri(o.company_id.logo)"
                                     style="width: 80px; height: 40px;"/>
                            </div>
                        </div>
                        <div class="col-8 text-start">
                            <div>
                                <b>
                                    <t t-esc="o.company_id.name.upper()"/>
                                </b>
                                <br/>
                                <t t-esc="o.company_id.street"/>
                                <br/>
                                <t t-esc="o.company_id.street2"/>
                                <br/>
                                Emirate :
                                <t t-esc="o.company_id.state_id.name"/>
                                <br/>
                                TRN:
                                <t t-esc="o.company_id.trn_no"/>
                                <br/>
                                E-Mail:
                                <t t-esc="o.company_id.email"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 40px;">
                        <div class="col-12 text-center">
                            <b>RECEIPT VOUCHER</b>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 25px;">
                        <div class="col-6">
                            No:
                            <b>
                                <span t-field="o.name"/>
                            </b>
                        </div>
                        <div class="col-6 text-end">
                            Dated:
                            <b>
                                <span t-field="o.date"/>
                            </b>
                        </div>
                    </div>
                    <table class="w-100" style="border: 1px solid #848484; margin-top: 10px;">
                        <tbody>
                            <tr style="border-bottom: 1px solid #848484;">
                                <td style="width: 80%; padding: 5px; border-right: 1px solid #848484;">
                                    <span style="margin-left:35px;">Particulars</span>
                                </td>
                                <td class="text-center" style="width: 20%; padding: 5px;">
                                    Amount
                                </td>
                            </tr>
                            <tr>
                                <td class="text-start" style="padding: 5px; border-right: 1px solid #848484;">
                                    <div>
                                        <b>Account:</b>
                                        <br/>
                                        <span style="margin-left:35px;" t-field="o.partner_id.name"/>
                                        <br/>
                                        <span style="margin-left:35px;">
                                            Agst Ref
                                            <b>
                                                <span t-field="o.ref"/>
                                                <span style="margin-left:60px;" t-field="o.amount"/>
                                                Cr
                                            </b>
                                        </span>
                                    </div>
                                    <div style="margin-top: 200px;">
                                        <b>Through:</b>
                                        <br/>
                                        <span style="margin-left:35px;">NATIONAL BANK OF RAS AL KHAIMAH</span>
                                        <br/>
                                        <b>On Account of:</b>
                                        <br/>
                                        <span style="margin-left:35px;">BEING AMOUNT RECEIVED</span>
                                        <br/>
                                        <b>Amount (in words):</b>
                                        <br/>
                                        <span style="margin-left:35px;" t-field="o.currency_id.name"/>
                                        <span t-esc="' '.join(o.currency_id.amount_to_text(o.amount).split(' ')[:-1])"/>
                                    </div>
                                </td>
                                <td class="text-center" style="padding: 5px;">
                                    <br/>
                                    <br/>
                                    <b>
                                        <span t-field="o.amount"/>
                                    </b>
                                    <div style="margin-top: 310px;">
                                        <b>
                                            <span t-field="o.amount"/>
                                        </b>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <br/>
                        <br/>
                    </table>
                    <div class="text-center" style="margin-top: 100px;">
                        This is a computer generated document
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <record id="account.action_report_payment_receipt" model="ir.actions.report">
        <field name="paperformat_id" ref="techfuge_exhibitor_customisation.paperformat_payment_receipt_exhibitor"/>
        <field name="print_report_name">'%s - RECEIPT' % object.partner_id.name</field>
    </record>


</odoo>
