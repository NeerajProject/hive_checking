<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="crm_case_tree_view_oppor_inherit_exhibitor" model="ir.ui.view">
            <field name="name">exhibitor.contract.form.view</field>
            <field name="model">exhibitor.contract</field>
            <field name="inherit_id" ref="techfuge_exhibitor_customisation.view_exhibitor_contract_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='commercial_details']" position="before">
                    <page name="contact_details_" string="Contact Details">

                        <field name="contact_details_ids">
                            <tree editable="false" create="false" delete="false">
                                <field name="exhibitor_contract_id" invisible="1"/>
                                <field name="name"/>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="function"/>

                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//page[@name='commercial_details']" position="after">


                    <page name="branding_pannel_details" string="Floor Plan and Branding Panel">


                        <group>
                            <group>


                                <field name="company_logo" style="width:150px;height:150px" string="Logo"/>
                                <field name="branding_panel_company_name" readonly="1" string="Company Name"></field>
                                <field name="branding_panel_status" readonly="1"></field>


                            </group>
                            <group>

                                <field name='category_accessories' readonly="1" widget="many2many_tags"></field>
                                <field name="is_other_accessory" string="Other Accessories"></field>
                                <field name='category_furniture' readonly="1" widget="many2many_tags"></field>
                                <field name="is_other_furniture" string="other Furniture"></field>
                                <field name="is_lock_branding_panel"></field>
                                <field name="branding_panel_width" string="Branding Panel  Width (MTR)"></field>
                                <field name="branding_panel_height" string="Branding Panel Height (MTR)"></field>

                            </group>
                        </group>
                        <field name="floor_plan_ids">
                            <tree editable="bottom">

                                <field name="stand_id"  domain="stand_id_domain"></field>
                                <field name="stand_id_domain" invisible="1"></field>
                                <field name="booth_design_id"></field>
                                <field name="description"></field>
                                <field name="by_iff_exihibitor" string="By HFS Exhibitor"></field>
                                <field name="date_of_upload"></field>
                                <field name="attachement_ids" string="Attachments" widget="many2many_binary"></field>

                                <!--                    <button name="download_floor_client_plan_document" type="object" string="Document"-->
                                <!--                                                class="oe_highlight"  icon="fa-download"/>-->
                                <field name="status"></field>
                            </tree>
                        </field>


                    </page>


                </xpath>
            </field>
        </record>

    </data>
</odoo>