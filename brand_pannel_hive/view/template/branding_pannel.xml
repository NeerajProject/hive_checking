													<label for="label_of_bed">
														<t t-esc="o.name" />


													</label>
													</t>
														<t t-else="contract.is_lock_branding_panel">
																											<input   type="checkbox" t-att-name="o" t-att-readonly="contract.is_lock_branding_panel" id="input_category_checkbox" t-att-value="o.id" t-att-checked="o.check_checked(contract.category_furniture.mapped('id'))" />
