											<span class="text-danger">*</span>
										</label>
										<div class="col-md-9 mb-9">
											<t t-foreach="accessories" t-as="o">

												<div>
														<t t-if="contract.is_lock_branding_panel">
													<input type="checkbox"     disabled="true" id="contract.input_category_checkbox" t-att-name="o" t-att-value="o.id" t-att-checked="o.check_checked(contract.category_accessories.mapped('id'))" />
													<label for="labe_of_sofa">
														<t t-esc="o.name" />
													</label>
														</t>

														<t t-else="contract.is_lock_branding_panel">
													<input type="checkbox"      id="contract.input_category_checkbox" t-att-name="o" t-att-value="o.id" t-att-checked="o.check_checked(contract.category_accessories.mapped('id'))" />
													<label for="labe_of_sofa">
														<t t-esc="o.name" />
													</label>
														</t>

