                       <form  action="/submit/branding_panel/category" method="post" id="attendee_badge_request_form"
                           enctype="multipart/form-data">
							<div class="row mt-4">

								<div class="col-md-4 mb-4">
									<div class="form-group">
										<label for="exh_attendee_first_name">
                                    FURNITURE



											<span class="text-danger">*</span>
										</label>
										<div class="col-md-20 mb-20">
											<t t-foreach="furniture" t-as="o">
												<div>
													<t t-if="contract.is_lock_branding_panel">
