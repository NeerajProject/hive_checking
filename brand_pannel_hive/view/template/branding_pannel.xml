<odoo>
	<template id="portal_preview_branding_panel">

		<br></br>
		<p> <strong> WIDTH :</strong> <t t-esc="contract.branding_panel_width"></t> MTR </p>
		<p> <strong> HEIGHT : </strong>  <t t-esc="contract.branding_panel_height"></t> MTR </p>

<t t-if="contract.branding_panel_status=='confirm'">

		<div class="alert alert-success" role="alert"  t-if="contract.branding_panel_status == 'confirm'">
YOUR BRANDING PANEL INFORMATION HAS BEEN RECEIVED SUCCESSFULLY
		</div>
</t>


		<div t-att-style="'background-image:url(\'/web/image/branding.panel.badge/'+str(contract.get_country_branding_panel_badge())+'/background_image/\')'	"
			 style="width:24rem;background-repeat: no-repeat;background-size: cover;">
			<div style="height:200px"></div>
			<div style="height:650px">
				<t t-if="contract.company_logo">
					<div style="display:flex;justify-content: center;align-items:center;">
						<img id="branding_panel_icons" t-att-src="image_data_uri(contract.company_logo)"
							 class="card-title" style="width:auto;height:120px;"/>
					</div>
				</t>
				<t t-else="contract.company_logo">
					<div style="display:flex;justify-content: center;align-items:center;">
						<img id="branding_panel_icons" style="width:auto;height:120px;"/>
					</div>
				</t>
				<br/>
				<t t-if="contract.branding_panel_company_name">
					<div style="display:flex;justify-content: center;align-items:center; text-align: center;">
						<h1 style="font-size:1.5rem;width:95%">
							<center>
								<span id="branding_panel_company_id"
									  t-esc="contract.branding_panel_company_name.upper()"/>
							</center>
						</h1>
						<br/>
					</div>
					<br/>
				</t>
				<br/>
				<br/>
				<br/>
				<t t-if="stands.stand_id">
					<div style="display:flex;justify-content: center;align-items:center;">
						<h1 style="color:#ea7235">
							<t t-esc="stands.stand_id.stand_number.upper()"/>
						</h1>
					</div>
				</t>
				<br/>
				<br/>
				<br/>
			</div>


		</div>

	</template>






