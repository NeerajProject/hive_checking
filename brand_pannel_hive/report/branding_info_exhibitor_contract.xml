<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>



         <template id="report_branding_panel_template">
   <t t-call="web.html_container">
       <t t-foreach="docs" t-as="o">
			<img src="/brand_pannel_hive/static/src/img/preview_image.jpeg"/>


        <br></br>
        <br></br>
        <img  t-att-src = "image_data_uri(o.company_logo)"></img>
           <br></br>
           <br></br>
    <center>
        <t t-if="o.branding_panel_company_name">
            <h1 style="size:200px">
                            <t t-esc="o.branding_panel_company_name"></t>

            </h1>
        </t>
    </center>
       </t>
   </t>

    </template>








 <record id="action_branding_panel_badge" model="ir.actions.report">
            <field name="name">Branding Panel Sheet</field>
            <field name="model">exhibitor.contract</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">brand_pannel_hive.report_branding_panel_template</field>
            <field name="report_file">brand_brand_pannel_hive.report_branding_panel_template</field>
            <field name="print_report_name">'Branding Panel'</field>
            <field name="binding_model_id" ref="brand_pannel_hive.model_exhibitor_contract"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>