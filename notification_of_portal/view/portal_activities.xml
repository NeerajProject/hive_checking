<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_activity_tree_view" model="ir.ui.view">
            <field name="name">mail.activity.custom.tree</field>
            <field name="model">mail.activity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_name"/>
                    <field name="section"/>
                    <field name="summary"/>
                    <field name="event_id"></field>
                    <field name="create_date"/>

                    <button name="action_open_document"  string="Open Documents" type="object"></button>
                    <button name="action_feedback" string="Mark As Done" type="object"></button>
                </tree>
            </field>
        </record>



                <record id="action_view_search" model="ir.ui.view">
            <field name="name">mail.activity.search</field>
            <field name="model">mail.activity</field>
            <field name="arch" type="xml">
                <search string="Company Named">
                    <field name="company_name" />
                    <field name="event_id"></field>


                </search>
            </field>
        </record>


        <record id="mail_activity_act_window" model="ir.actions.act_window">
            <field name="name">Portal Activities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mail.activity</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Portal Activities" id="portal_activities_menuitem"  action="notification_of_portal.mail_activity_act_window"/>

    </data>
</odoo>